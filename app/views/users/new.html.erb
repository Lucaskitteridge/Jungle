<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class='breadcrumb'>
    Name: <%= f.text_field :name %>
    Email: <%= f.text_field :email %>
  </div> 
  <div class='breadcrumb'>
    Password: <%= f.password_field :password %>
    Comfirm Password: <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>

<% end %>